---
import GitHub from "./icons/GitHub.astro"
import NextJS from "./icons/NextJS.astro"
import Tailwind from "./icons/Tailwind.astro"
import LinkButton from "./LinkButton.astro"

const TAGS = {
  NEXT: {
    name: "VUE.JS",
    class: "bg-black text-white",
  },
  TAILWIND: {
    name: "Tailwind",
    class: "bg-[#003159] text-white",
  },
  BOOTSTRAP: {
    name: "Bootstrap CSS",
    class: "bg-[#003159] text-white",
  },
  ASPNET: {
    name: "ASP.NET",
    class: "bg-[#003159] text-white",
  },
  SQL: {
    name: "SQL Server",
    class: "bg-[#003159] text-white",
  },
}
const PROJECTS = [
{
    title: "Lumina Resort - Frontend y Backend en .NET.",
    description:
      "Pagina web de hotel que permite a la clientela realizar reservas y al personal administrar las reservaciones, usuarios, paquetes, etc.",
    link: "https://luminaresortapp.somee.com",
    github: "https://github.com/EdwinDM/luminaresort",
    image: "/projects/luminaresort.webp",
    tags: [TAGS.ASPNET, TAGS.SQL, TAGS.BOOTSTRAP],
  },
  {
    title: "FoodBook - Página de recetas que hace uso de API REST.",
    description:
      "Pagina en la que se muestran todo tipo de recetas dando la posibilidad de buscar y filtrar segun se desee, además, se pueden guardar en favoritos.",
    link: "#",
    github: "https://github.com/EdwinDM/foodbook-2.0",
    image: "/projects/foodbook.webp",
    tags: [TAGS.NEXT, TAGS.TAILWIND],
  },
  {
    title: "Mis proyectos de diseño gráfico UX/UI y algunos más.",
    description:
      "En este conjunto de carpetas se encuentran algunos de mis proyectos realizados para poder ver más a fondo mis habilidades",
    link: "https://drive.google.com/drive/folders/14_Mooh9M3m_tU-us_nMIg-ZZzfSifkM7",
    image: "/projects/projects.webp",
    tags: [],
  },
]
---

<section class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, description, tags, link, github }) => (
      <article>
        <h3 class="text-2xl font-semibold text-yellow-800 dark:text-yellow-200 mb-2">
          {title}
        </h3>
        <p class="text-lg mb-4 text-pretty">{description}</p>
        <ul class="flex gap-x-2 flex-row mb-2">
          {tags.map((tag) => (
            <li>
              <span
                class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
              >
                {tag.name}
              </span>
            </li>
          ))}
        </ul>
        <img
          loading="lazy"
          class="rounded shadow-2xl shadow-white/10 aspect-video "
          src={image}
          alt={`Captura de pantalla del proyecto ${image}`}
        />
        <footer class="flex gap-x-4 items-end justify-start mt-4">
          {github && (
            <LinkButton href={github}>
              <GitHub class="size-6" />
              Ver código fuente
            </LinkButton>
          )}
          <LinkButton href={link}>
            <svg
              width="24"
              height="24"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
              fill="none"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <>
                <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                <path d="M19.5 7a9 9 0 0 0 -7.5 -4a8.991 8.991 0 0 0 -7.484 4" />
                <path d="M11.5 3a16.989 16.989 0 0 0 -1.826 4" />
                <path d="M12.5 3a16.989 16.989 0 0 1 1.828 4" />
                <path d="M19.5 17a9 9 0 0 1 -7.5 4a8.991 8.991 0 0 1 -7.484 -4" />
                <path d="M11.5 21a16.989 16.989 0 0 1 -1.826 -4" />
                <path d="M12.5 21a16.989 16.989 0 0 0 1.828 -4" />
                <path d="M2 10l1 4l1.5 -4l1.5 4l1 -4" />
                <path d="M17 10l1 4l1.5 -4l1.5 4l1 -4" />
                <path d="M9.5 10l1 4l1.5 -4l1.5 4l1 -4" />
              </>
            </svg>
            Ir a la dirección
          </LinkButton>
        </footer>
      </article>
    ))
  }
</section>
